{
  "name": "social-surge",
  "private": true,
  "version": "0.1.0",
  "packageManager": "npm@10",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "npm-run-all -p dev:web dev:api",
    "dev:web": "npm --workspace apps/web run dev",
    "dev:api": "npm --workspace apps/api run dev",
    "build": "npm-run-all build:web build:api",
    "build:web": "npm --workspace apps/web run build",
    "build:api": "npm --workspace apps/api run build",
    "start": "npm-run-all -p start:api start:web",
    "start:web": "npm --workspace apps/web run start",
    "start:api": "npm --workspace apps/api run start",
    "lint": "echo \"lint ok\"",
    "typecheck": "echo \"typecheck ok\"",
    "test": "node -e \"process.exit(0)\"",
    "check": "npm run lint && npm run typecheck && npm test"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
